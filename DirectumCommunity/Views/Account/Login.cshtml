@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <style>
    .form-group {
      margin-bottom: 20px;
    }
    .btn-custom {
      background-color: #FF8600D9;
      color: white;
      border-color: #FF8600D9;
      transition: background-color 0.3s ease;
    }
    .btn-custom:hover {
       background-color: #FFA500;
       border-color: #FFA500;
    }
  </style>
</head>
<body>
<div class="container-fluid d-flex align-items-center justify-content-center" style="height: 100vh; background: #f1f1f1;">
    <div class="card text-center">
        <div class="card-body" style="padding: 50px;">
            <div class="logo">
                <!-- Замените ссылку на изображение вашим логотипом -->
                <img src="~/images/DirectumRxLogo.svg" alt="Логотип" style="padding-bottom: 30px;">
            </div>
            <form method="post" asp-controller="Account" asp-action="Login">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <input type="text" asp-for="Login" class="form-control mx-auto" style="width: 250px;" placeholder="Имя пользователя">
                    <span asp-validation-for="Login"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control mx-auto" style="width: 250px;" placeholder="Пароль">
                    <span asp-validation-for="Password"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block btn-custom" style="width: 250px;">Вход</button>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>