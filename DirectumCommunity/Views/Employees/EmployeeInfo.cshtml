@using DirectumCommunity.Extensions
@model Employee

<div class="col-sm-4 employee-info" data-employee-id="@Model.Id" style="margin-bottom: 60px;">
    <div class="row employee-details">
        <div class="row position-relative">
            @if (!string.IsNullOrEmpty(Model.Avatar))
            {
                <img class="employee-details-img" src="data:image/jpeg;base64,@Model.Avatar" alt="Employee Avatar">
            }
            else
            {
                <img class="employee-details-img" src="~/images/DefaultEmployeeAvatar.svg" alt="Default Avatar">
            }
            @if (Model.Person.IsBirthdayToday())
            {
                <img class="img-overlay" src="~/images/Birthday.svg" alt="Default Avatar">
            }
        </div>
        <div class="row employee-card-name-text">
            @Model.Person?.LastName<br/>@Model.Person?.FirstName<br/>@Model.Person?.MiddleName
        </div>
        <div class="row employee-work-info-text">
            @Model.Department?.Name
            <br/>
            @Model.JobTitle?.Name
        </div>
    </div>
</div>